# ─────────────────────────────────────────────────────────────
# twitch-vod-lib environment variables
# Copy this file to .env and fill in your values.
# Never commit .env to version control.
# ─────────────────────────────────────────────────────────────

# Required — Twitch Developer Application credentials
# https://dev.twitch.tv/console/apps
TWITCH_CLIENT_ID=your_client_id_here
TWITCH_CLIENT_SECRET=your_client_secret_here

# Optional — User Access Token (required for sub-only VODs)
# TWITCH_USER_ACCESS_TOKEN=

# Optional — Path to a Netscape-format cookies file for yt-dlp
# (alternative to user access token for sub-only VOD downloads)
# TWITCH_COOKIES_FILE=cookies.txt

# Download settings
TWITCH_DOWNLOAD_QUALITY=best   # best | 1080p60 | 1080p | 720p60 | 720p | 480p | worst
TWITCH_OUTPUT_DIR=output/raw

# HTTP tuning
TWITCH_API_TIMEOUT=30
TWITCH_API_RETRIES=3

# Chat download tuning
TWITCH_CHAT_MAX_PAGES=10000
TWITCH_CHAT_RATE_LIMIT_MIN=0.05
TWITCH_CHAT_RATE_LIMIT_MAX=0.5

# Logging
LOG_LEVEL=INFO   # DEBUG | INFO | WARNING | ERROR
